@model BoxingList.Models.Boxer
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2>Edit Boxer</h2>
<hr />

<form asp-action="Edit">
    <div class=" container">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class=" row">
                <div class="col-sm-1">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class=" row">
                <div class="col-sm-1">
                    <label asp-for="Division"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Division" class="form-control" />
                </div>
                <span asp-validation-for="Division" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class=" row">
                <div class="col-sm-1">
                    <label asp-for="Record"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Record" class="form-control" />
                </div>
                <span asp-validation-for="Record" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-sm btn-primary" />
            <a asp-action="Index" class="btn btn-sm btn-success">Back to Boxing List</a>
        </div>
    </div>

</form>