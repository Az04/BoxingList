@model BoxingList.Models.Boxer
@{
    ViewData["Title"] = "Details";
}

<br />
<h2>Details of Boxer</h2>
<hr />

<form asp-action="Details">
    <div class=" container">
        <input asp-for="Id" hidden />
        <div class="form-group">
            <div class=" row">
                <div class="col-sm-1">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Name" disabled class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class=" row">
                <div class="col-sm-1">
                    <label asp-for="Division"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Division" disabled class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class=" row">
                <div class="col-sm-1">
                    <label asp-for="Record"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Record" disabled class="form-control" />
                </div>
            </div>
        </div>
        <br />
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-sm btn-success">Back to Boxing List</a>
        </div>
    </div>

</form>